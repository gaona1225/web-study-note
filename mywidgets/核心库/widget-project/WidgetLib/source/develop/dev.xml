<widget>
	<userid>buttonActive</userid>
	<userfun>$('.buttonActive').buttonActive()</userfun>
	<userdom>
		<div class="showElem">
			<input type="button" class="buttonActive" value="button4" />
		</div>
	</userdom>
	<editdom>
		<div class="editElem">
			<label>disable</label>
			<select id="buttonActive-disable">
				<option>yes</option>
				<option selected>no</option>
			</select>
		</div>
	</editdom>
	<editfun>
		$('#buttonActive-disable').change(function(){
			var selectedVal = $(this).find('option:selected').html() ;
			if(selectedVal == 'yes'){
				$('.buttonActive').buttonActive('destroy');   
			}else{
				$('.buttonActive').buttonActive();   
			}
		}) ;
	</editfun>
</widget>